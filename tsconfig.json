{
  "compileOnSave": false,
  "compilerOptions": {    
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,    
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@imagen64/*": ["src/assets/imagenes_base64/*"],
      "@funciones/*": ["src/app/funciones/*"],
      "@directivas/*": ["src/app/directivas/*"],
      "@assets/*": ["src/assets/*"],
      "@accesoroles/*": ["src/app/modulos/sgp/accesos-rol/*"],
      "@mensajes/*": ["src/app/modulos/seguridad/mensajes/*"],
      "exceljs": [
        "node_modules/exceljs/dist/exceljs.min"
      ]
    },
    "types": [
      "node"
    ]
  }
}
