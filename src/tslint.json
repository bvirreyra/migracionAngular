{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        " import-blacklist " : [ true , " rxjs " , " rxjs/Rx " ]
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true
    },
    "eofline": true,
    "comment-format": [
        true,
        "check-space"
      ]
}
